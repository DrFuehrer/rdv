<?xml version="1.0" encoding="UTF-8"?>
<dialog id="dialog" title="NEEScentral Import" size="500,600">
  <panel layout="GridBagLayout">
  	<panel background="white" border="LineBorder(gray,1)" Layout="FlowLayout(FlowLayout.LEFT)">
			<gridbagconstraints fill="GridBagConstraints.HORIZONTAL" insets="0,0,0,0" gridx="0" gridy="0" weightx="0" weighty="0"/>
			<label border="EmptyBorder(10,10,10,10)" text="Import data from NEEScentral into RDV."/>
    </panel>
    <scrollpane>
	    <gridbagconstraints fill="GridBagConstraints.BOTH" insets="10,10,0,10" gridx="0" gridy="1" weightx="1" weighty="1"/>
			<tree id="centralTree" border="EmptyBorder(5,5,5,5)" editable="false" rootVisible="false" visibleRowCount="12" showsRootHandles="true"/>
		</scrollpane>
		<label text="Files to import:">
			<gridbagconstraints fill="GridBagConstraints.HORIZONTAL" insets="10,10,0,10" gridx="0" gridy="2" weightx="1" weighty="0"/>		
		</label>
    <scrollpane>
	    <gridbagconstraints fill="GridBagConstraints.HORIZONTAL" insets="10,10,0,10" gridx="0" gridy="3" weightx="1" weighty="0"/>
			<list id="dataFileList" border="EmptyBorder(5,5,5,5)" visibleRowCount="10"/>
		</scrollpane>		
	  <panel>
	    <gridbagconstraints anchor="GridBagConstraints.EAST" insets="10,10,10,5" gridx="0" gridy="4" weightx="1" weighty="0"/>
	    <button id="importButton" text="Import" enabled="false"/>
			<button id="cancelButton" text="Cancel"/>		
	  </panel>
	</panel>
</dialog>